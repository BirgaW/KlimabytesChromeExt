{
  "name": "Klimabytes Extension",
  "version": "8.1",
  "manifest_version": 3,
  "devtools_page": "devtools.html",
  "permissions": [
    "tabs",
    "debugger",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  }
}